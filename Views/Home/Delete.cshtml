
@model Job_Offers_Website.Models.ApplyForJob

@{
    ViewBag.Title = "DetailsOfJob";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="display-5"> Delete this Applyed job </h3>
                </div>
                <div class="mb-6 row" style="margin:20px;">
                    <h4 class="alert alert-danger">Are you sure you want to delete this Applyed Job?</h4>
                </div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.job.JobTitle)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.job.JobTitle)
                        <hr />
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ApplyDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ApplyDate)
                        <hr />
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Message)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Message)
                        <hr />
                    </dd>
                    <dt>
                        <strong>Upload CV </strong>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Cv)
                    </dd>

                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    <div class="form-actions no-color" style="margin:20px;">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        @Html.ActionLink("Back to List", "GetJobsByUser", null, new { @class = "btn btn-outline-info" })

                    </div>
                }

            </div>
        </div>
    </div>
</div>


<style>
    .btn {
        margin: 10px;
    }

    .card {
        background-position-y: center;
        margin: 30px;
        box-shadow: inset 0 -3em 3em rgba(0,0,0,0.1), 0 0 0 2px rgb(255,255,255), 0.3em 0.3em 1em rgba(0,0,0,0.3);
    }
</style>


