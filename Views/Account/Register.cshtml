    <script>
            // <![CDATA[
            jQuery(document).ready(function () {
                $("#user_type").val("Publishers");
                $('input:radio[name="switch-one"]').change(function () {
                    if ($(this).val() == 'Yes') {
                        $("#head_1").text("Register As Publisher");
                        $("#user_type").val("Publishers");

                    }
                    else if ($(this).val() == 'No') {
                        $("#head_1").text("Register As Searcher");
                        $("#user_type").val("Searcher");

                    }
                });


            });
        </script>



