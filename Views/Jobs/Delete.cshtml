@model Job_Offers_Website.Models.Job

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <div class="card mb-3" style="margin-top:20px;">
        <div class="card-header">
            <h3 class="display-5">Delete Selected Job  </h3>
        </div>
        <div class="row g-0">
            <div class="col-md-10 text-center" style="margin:20px;">
                <h4 class="alert alert-danger">Are you sure you want to delete this Job?</h4>
            </div>
            <div class="col-md-3">
                <img src="~/Uploads/@Html.DisplayFor(model => model.JobImg)"
                     class="img-thumbnail" />
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Category.CategoryName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Category.CategoryName)
                            <hr />
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.JobTitle)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.JobTitle)
                            <hr />
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.JobContent)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.JobContent)
                            <hr />
                        </dd>
                    </dl>
                </div>
                <div style="margin:10px;">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        @Html.ActionLink("Back to Lis", "Index", null, new { @class = "btn btn-outline-info btn-lg" })
                        <input type="submit" value="Delete" class="btn btn-danger btn-lg" />

                    </div>
                    }
                </div>

            </div>
        </div>
    </div>



