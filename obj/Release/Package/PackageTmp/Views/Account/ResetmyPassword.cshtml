
@{
    ViewBag.Title = "ResetmyPassword";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="display-5"> ResetmyPassword </h3>
                </div>
                @if (ViewBag.check_user != null)
                {
                    <div class="alert alert-warning" style="margin:15px;" role="alert">
                        <strong>@ViewBag.check_user</strong>
                    </div>
                }
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-3 row">
                        <label for="inputUserName" class="col-md-4 col-form-label"><strong>User Name</strong> </label>
                        <input type="text" class="form-control form-control-lg col-md-6" id="user_name1" name="User_Name" />
                    </div>
                    <div class="mb-3 row" style="margin-left:80px;">
                        <button type="submit" class="btn badge-success btn-lg" id="btn_save">
                            Verify
                        </button>
                        
                    </div>
                }



                <!--partail View -->
                @*@if (ViewBag.check_user != null&& ViewBag.check_user!= "User name not found ...!")
                {
                    <section>
                        <hr class="my-4">
                        @Html.Partial("_ResetMyPasswordPartial")
                    </section>
                }*@
            </div>
          </div>
        </div>
    </div>
</div>


<style>
    .btn {
        margin: 10px;
    }

    .card {
        background-position-y: center;
        margin: 30px;
        box-shadow: inset 0 -3em 3em rgba(0,0,0,0.1), 0 0 0 2px rgb(255,255,255), 0.3em 0.3em 1em rgba(0,0,0,0.3);
    }
</style>


