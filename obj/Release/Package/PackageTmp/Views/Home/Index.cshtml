@model IEnumerable<Job_Offers_Website.Models.Category>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome, Dear visitor researcher or publisher jobs</h1>
    <p class="lead">You can post a job if you are a publisher or search for a job if you are looking for a job.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

  

@foreach (var item in Model)
{  <div class="card" style="margin-bottom:30px; min-width:100%;">
       <div class="card-header">
           <h2>@Html.DisplayFor(modelItem => item.CategoryName)</h2>
       </div>
    <h4 class="card-title" style="margin:15px;">
    @Html.DisplayFor(modelItem => item.CategoryDescription)
    </h4>

    <div class="row row-cols-1 row-cols-md-3">
        @foreach (var subitem in item.Jobs)
        {
            
            var job_contant = "";
            var job_con = subitem.JobContent;
            if (job_con != null)
            {
                if (job_con.Length > 50)
                {
                    job_contant = job_con.Substring(0, 48) + ".....";
                }
                else
                {
                    job_contant = job_con;
                }
            }
            else { job_contant = job_con; }
            <div class="col-md-3" style="margin-bottom:10px;margin-top:10px;">
                <div class="card text-center h-100" id="Card_contant">
                    <div class="card-body">
                        <img class="card-img-top" src="~/Uploads/@subitem.JobImg"/> 
                             
                        <h4 class="card-title">@Html.DisplayFor(model_item => subitem.JobTitle)</h4>
                        <p class="card-text">
                            @job_contant
                        </p>
                        @*<a class="btn btn-info"  > Details &raquo; </a>*@
                        @Html.ActionLink("Details", "Details", new { JobId = subitem.Id },new {@class= "btn btn-info" })
                    </div>
                </div>
            </div>

        }

    </div>
</div>
}





