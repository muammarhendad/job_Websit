@model Job_Offers_Website.Models.ContactModel

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="display-5">Contact Us </h3>
                </div>
                <div class="card-body">
                    <div class="mb-3 row">
                        @Html.ActionLink("Back to Home Page ", "Index", null, new { @class = "btn btn-outline-info" })
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!-- CategoryName-->
                        <div class="mb-3 row">
                            <label for="inputName" class="col-md-4 col-form-label"><strong>Full Name</strong> </label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Email-->
                        <div class="mb-3 row">
                            <label for="inputEmail" class="col-md-4 col-form-label"><strong>Email</strong> </label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-lg", id = "txt_Description" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!-- Subject-->
                        <div class="mb-3 row">
                            <label for="inputSubject" class="col-md-4 col-form-label"><strong>Subject</strong> </label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control form-control-lg", id = "txt_Description" } })
                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Massege-->
                        <div class="mb-3 row">
                            <label for="inputMassege" class="col-md-4 col-form-label"><strong>Massege</strong> </label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control form-control-lg", id = "txt_Description" } })
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Send" class="btn btn-primary btn-lg" />
                            </div>
                        </div>

                    }


                </div>

            </div>
        </div>
    </div>
</div>


