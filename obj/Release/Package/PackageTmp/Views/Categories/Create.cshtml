@model Job_Offers_Website.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="display-5">Create New Category </h3>
                </div>
                <div class="card-body">
                    <div class="mb-3 row">
                        <div>
                            <p class="text-danger" id="data_view"><strong>@ViewBag.data_exist</strong></p>
                        </div> 
                    </div>
                    <div class="mb-3 row">
                        @Html.ActionLink("Back to List Categories ", "Index", null, new { @class = "btn btn-outline-info" })

                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <!-- CategoryName-->
                        <div class="mb-3 row">
                            <label for="inputCategoryName" class="col-md-4 col-form-label"><strong>Category Name</strong> </label>
                            @*@Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })*@
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control form-control-lg",id="txt_name"} })
                                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <!-- CategoryDescription-->
                        <div class="mb-3 row">
                            <label for="inputCategoryDescription" class="col-md-4 col-form-label"><strong>Category Description</strong> </label>
                            @*@Html.LabelFor(model => model.CategoryDescription, htmlAttributes: new { @class = "col-sm-2 col-form-label" })*@
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.CategoryDescription, new { htmlAttributes = new { @class = "form-control form-control-lg", id = "txt_Description" } })
                                @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="col-md-offset-2 col-md-10">
                                <input id="but_submit" type="submit" value="Create" class="btn btn-primary btn-lg" />
                            </div>
                        </div>

                    }


                </div>

            </div>
        </div>
    </div>
</div>

